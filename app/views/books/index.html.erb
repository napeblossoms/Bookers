<h1>Books</h1>
<% @books.each do |book| %>
<table>
 <thead>
  <tr>
   <th>title</th>
   <th>body</th>
 </thead>
 <tbody>
  <tr>
   <td class="a"><%= book.title %></td>
   <td class="b"><%= book.body %></td>
   <td class="c"><%= link_to "Show", book_path(book.id) %></td>
   <td class="d"><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td class="e"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
 </tbody>
</table>
<% end %>


<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved
 <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>body</h5>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
<% end %>